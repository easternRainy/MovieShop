@model ApplicationCore.Models.MovieDetailsResponseModel



<div class="container">
    <div class="row">
        <div class="col">
            <img src="@Model.PosterUrl" alt="Movie Poster"/>
        </div>
        <div class="col">
            <h2>@Model.Title</h2>
            <h10>Your mind is the scene of the crime.</h10><br>
            <h9>
                @Model.RunTime m | 2010         
                <span class="badge bg-secondary">Adventure</span>
                <span class="badge bg-secondary">Action</span>
                <span class="badge bg-secondary">Science Fiction</span>
            </h9>
            <p>
                Cobb, a skilled thief who commits corporate espionage by infiltrating the subconscious of his targets is offered a chance to regain his old life as payment for a task considered to be impossible: "inception", the implantation of another person''s idea into a target''s subconscious.
            </p>
        </div>
        <div class="col">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Review
            </button>
            <br>
            <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#buyMovieModel">
                BUY $@Model.Price
            </button>
            
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Review</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                        <div class="modal-body">
                            <div class="rating-drop-down">
                                <label>Choose a rate:</label>
                                <select name="rates" id="rates">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                                </select>
                            </div>

                            <div class="review-content">
                                <label>Write Your Review:</label>
                                <input type="text" size=50 height=50>
                            </div>
                        </div>
                        
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="buyMovieModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmed $9.9</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                    ...
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
                </div>
            </div>


            
        </div>
    </div>

    <div class="row">
        <div class="col">w
            Movie Facts

            <ul class="list-group">
                <li class="list-group-item">Release Date <span class="badge bg-secondary">Jul 15, 2010</span></li>
                <li class="list-group-item">Run Time <span class="badge bg-secondary">148 m</span></li>
                <li class="list-group-item">Box Office <span class="badge bg-secondary">$825,532,764.00</span></li>
                <li class="list-group-item">Budget <span class="badge bg-secondary">$160,000,000.00</span></li>
            </ul>

            Trailers

            <ul class="list-group">
                <li class="list-group-item"><a href="https://www.youtube.com/watch?v=Jvurpf91omw">Inception</a></li>
            </ul>
        </div>
        <div class="col">
            Cast
            <ul class="list-group list-group-horizontal">
                <li class="list-group-item"><img src="https://image.tmdb.org/t/p/w342//wo2hJpn04vbtmh0B9utCFdsQhxM.jpg" style="width:7%;" class="bg-info rounded-circle"/></li>
                <li class="list-group-item">Leonardo DiCaprio</li>
                <li class="list-group-item">Dom Cobb</li>
            </ul>
              <ul class="list-group list-group-horizontal-sm">
                <li class="list-group-item">IMG</li>
                <li class="list-group-item">Ken Watanable</li>
                <li class="list-group-item">Mr. Saito</li>
              </ul>
              
        </div>
    </div>
</div>

